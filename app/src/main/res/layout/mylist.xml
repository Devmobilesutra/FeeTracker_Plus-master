<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"


        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="100">

                    <RelativeLayout
                        android:id="@+id/rel_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/l3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_margin="@dimen/margin_10"
                                app:civ_border_color="@color/black"
                                app:civ_border_width="1dp"
                                android:id="@+id/ivProfile"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="10"
                                android:src="@drawable/ic_person_grey600_24dp">
                            </de.hdodenhof.circleimageview.CircleImageView>

                            <TextView
                                android:layout_toRightOf="@+id/ivProfile"
                                android:id="@+id/edit_stud_auto_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="@dimen/margin_10"
                                android:text="11"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/edit_stud_name"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@+id/edit_stud_auto_id"
                                android:gravity="center_horizontal|left"
                                android:paddingLeft="@dimen/margin_10"
                                android:text="satish"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"

                                />

                            <TextView
                                android:id="@+id/text_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center|end"
                                android:paddingLeft="@dimen/margin_5"
                                android:paddingRight="@dimen/margin_5"
                                android:text="20/12/2016"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black_color75"
                                android:textSize="@dimen/sp_14" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/l3"
                            android:layout_marginBottom="@dimen/margin_5"


                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:orientation="horizontal"
                                android:weightSum="10"


                                >

                                <TextView
                                    android:id="@+id/edit_branch_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/edit_stud_name"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:layout_weight="5"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/margin_10"

                                    android:text="bbbv"
                                    android:textColor="@color/black_color75"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:id="@+id/edit_Stand_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:layout_weight="5"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/margin_10"

                                    android:text="bbbv"
                                    android:textColor="@color/black_color75"
                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:orientation="horizontal"
                                android:weightSum="10"


                                >

                                <TextView
                                    android:id="@+id/edit_batch_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:layout_weight="5"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/margin_10"
                                    android:text="bbbv"
                                    android:textColor="@color/black_color75"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:id="@+id/edit_Sub_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:layout_weight="5"
                                    android:gravity="center|left"
                                    android:paddingLeft="@dimen/margin_10"
                                    android:text="bbbv"
                                    android:textColor="@color/black_color75"

                                    android:textSize="@dimen/sp_14" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/auto_id"
                            android:layout_width="fill_parent"

                            android:layout_height="30dp"
                            android:gravity="center_horizontal"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/l1"
                android:background="@color/selected_gray"
                android:orientation="horizontal"
                android:weightSum="10">

                <!--<ImageView-->
                <!--android:id="@+id/img_phone1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:layout_weight="3.3"-->

                <!--android:scaleType="matrix"-->
                <!--android:src="@drawable/call" />-->
                <Button
                    android:id="@+id/img_phone1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/call"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5"
                    android:text="@string/Parent"
                    android:textSize="@dimen/sp_14" />

                <!--<ImageView-->
                <!--android:id="@+id/stud_phone"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:layout_weight="3.3"-->
                <!--android:layout_marginTop="2.5dp"-->
                <!--android:src="@drawable/call" />-->
                <Button
                    android:id="@+id/stud_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/call"
                    android:gravity="left|center_vertical"
                    android:text="@string/Student"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="7dp"
                    android:src="@drawable/remove" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/ic_create_black_24dp" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
