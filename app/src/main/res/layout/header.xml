<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    tools:showIn="@layout/register">

    <!--     style="@style/ToolBarStyle" -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/action_bar_height"
        android:weightSum="100"
        android:padding="5dp">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical"
        android:visibility="gone"

        >
        <ImageView
            android:id="@+id/img_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:visibility="visible"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/logoms"/>
        </LinearLayout>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_5"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/class_mgmt"
                android:textAllCaps="true"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/sp_22" />
            <TextView

                android:id="@+id/txt_user_heading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_user"
                android:text="gggggg"
                android:textAllCaps="true"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"

            >
            <RelativeLayout

                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:layout_marginRight="@dimen/margin_5"
                >




                <!--<TextView-->
                    <!--android:id="@+id/txt_user"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@+id/img_drawer"-->
                    <!--android:layout_centerVertical="true"-->

                    <!--android:gravity="left|center_horizontal|center_vertical"-->
                    <!--android:text="@string/class_mgmt"-->
                 <!--android:textAllCaps="true"-->
                    <!--android:textColor="@color/heading_text_color"-->

                    <!--android:textSize="@dimen/sp_22" />-->


            </RelativeLayout>



        </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="50"
        >




        <!--<TextView-->
            <!--android:id="@+id/txt_user_heading"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->



            <!--android:gravity="left|center_horizontal"-->
            <!--android:text=""-->
            <!--android:textAllCaps="true"-->
            <!--android:textColor="@color/heading_text_color"-->

            <!--android:textSize="@dimen/sp_16" />-->


        </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:gravity="right"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/menuList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_centerVertical="true"
                android:paddingRight="3dp"
                android:padding="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:src="@drawable/search_black"
                />



            <ImageView
                android:id="@+id/menu_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_horizontal|center_vertical"
                android:padding="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toLeftOf="@+id/menuSetting"
                android:src="@drawable/add_black"
                />
            <LinearLayout
                android:id="@+id/switch_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:visibility="gone"

                android:orientation="vertical">
            <!--<Switch-->
                <!--android:id="@+id/selectPresent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="7"-->
                <!--android:gravity="center_horizontal|center_vertical"-->
                <!--android:paddingTop="@dimen/margin_7"-->
                <!--android:paddingBottom="@dimen/margin_7"-->
                <!--android:paddingRight="@dimen/margin_7"-->
                <!--android:visibility="gone"-->
                <!--android:textColor="@color/white"-->


                <!--android:layout_below="@+id/container_header"-->


                <!--/>-->

                <CheckBox
                android:id="@+id/selectPresent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="@dimen/margin_7"
                android:paddingBottom="@dimen/margin_7"
                   android:layout_marginLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_7"
                    android:checked="true"
                android:textColor="@color/white"
                    android:clickable="false"
                 android:visibility="gone"
                android:layout_below="@+id/container_header"


                />
                <TextView
                    android:id="@+id/head_switch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:visibility="gone"


                    android:gravity="center_vertical|center_horizontal"
                    android:text="Present"

                    android:textColor="@color/heading_text_color"

                    android:textSize="@dimen/sp_14" />
                </LinearLayout>





        </LinearLayout>
</LinearLayout>

</RelativeLayout>










