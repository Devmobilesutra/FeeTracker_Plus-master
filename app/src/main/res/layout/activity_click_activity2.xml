<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:tileMode="repeat"
    >



    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="90" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/step_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_hand1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hand" />

                <!--<TextView
                    android:id="@+id/txt_rakhi1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Click to get Ready"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />-->

                <TextView
                    android:id="@+id/txt_rakhi2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/personal_profile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/step_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_hand2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hand" />

                <!--<TextView
                    android:id="@+id/txt_rakhi22"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Click to get Ready"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />-->

                <TextView
                    android:id="@+id/txt2_rakhi2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/Class_profile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/step_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_hand3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hand" />

                <!--<TextView
                    android:id="@+id/txt_rakhi3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Click to get Ready"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />-->

                <TextView
                    android:id="@+id/txt2_rakhi3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/define_fees"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/txt_info_1"
            android:layout_width="match_parent"
            android:text="@string/info_cls1"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"

            android:lineSpacingExtra="7dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal|left"

            />
        <TextView
            android:id="@+id/txt_info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:layout_weight="30"
            android:text="@string/info_cls2"
            android:visibility="gone"
            android:lineSpacingExtra="7dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal|left"/>

        <TextView
            android:id="@+id/txt_info_3"
            android:layout_width="match_parent"
            android:text="@string/info_cls3"
            android:layout_height="0dp"
            android:padding="@dimen/margin_10"
            android:layout_weight="30"
            android:visibility="gone"
            android:lineSpacingExtra="7dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal|left"/>


        <!--<TextView
            android:id="@+id/btn_next"
