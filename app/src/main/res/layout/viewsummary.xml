<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/margin_10"
        >


        <RelativeLayout
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10">

            <TextView
                android:id="@+id/text_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:text=""
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/text_count"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/border_white"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/text_branch"
                    android:layout_width="0dp"
                    android:layout_weight="3.3"
                    android:layout_height="fill_parent"

                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_stand"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.3"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_batch"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.3"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_subj"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/margin_10"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout111"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/l1">

                <TableLayout

                    android:id="@+id/TableLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/yellow"
                        android:textAlignment="center">


                        <TextView
                            android:id="@+id/subject1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Subject"
                            android:textColor="@color/black_color75"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/total1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Total"
                            android:textColor="@color/black_color75"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/received1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Received"
                            android:textColor="@color/black_color75"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/balance1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Balance"
                            android:textColor="@color/black_color75"
                            android:textSize="16sp" />
                    </TableRow>


                </TableLayout>


            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
