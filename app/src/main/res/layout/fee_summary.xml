<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RelativeLayout="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_dash"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:text="Fee Summary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black_color75"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:visibility="gone"
        android:weightSum="9">

        <TextView
            android:id="@+id/tot_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1.5"
            android:text="@string/total"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/edit_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.5"

            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tot_received"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1.5"
            android:text="@string/received"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/edit_received"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.5"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tot_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1.5"
            android:text="@string/balance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/edit_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.5"

            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textColor="@color/white"
            android:textSize="13dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frame22"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="@dimen/margin_5"
        android:visibility="gone">


        <ScrollView

            android:id="@+id/scrollView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">


            <LinearLayout

                android:id="@+id/linearLayout111"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10">

                <TableLayout

                    android:id="@+id/TableLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*">

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/yellow"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/branch1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Branch"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/std1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Standard"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/batch1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Batch"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/subject1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Subject"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/total1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Total"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/received1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Received"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/balance1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/Balance"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />
                    </TableRow>


                </TableLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/totDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10">

            <android.support.v7.widget.CardView
                android:id="@+id/toatlCardView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@color/white"
                card_view:cardCornerRadius="@dimen/card_corner_radius"
                card_view:cardElevation="@dimen/margin_10">

                <LinearLayout
                    android:id="@+id/relLayoutTotal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="@dimen/margin_10">

                    <TextView
                        android:id="@+id/txtAllStudent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="Total Students:"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/labels"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txtLableFee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtAllStudent"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.8"
                            android:text="Total Fee"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtLableReceived"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center_horizontal"
                            android:text="Total Received"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtLableBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:text="Total Balance"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/values"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txtFee"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center_horizontal"
                            android:text="999999"
                            android:textColor="@color/red_500"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtReceived"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center_horizontal"
                            android:text="77779"
                            android:textColor="@color/red_500"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingRight="@dimen/margin_5"
                            android:text="22222"
                            android:textColor="@color/red_500"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/toatlCardView"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingTop="5dp"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>