<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/back_dash"
    android:orientation="vertical"
   >

    <FrameLayout
        android:id="@id/images"
        android:layout_width="fill_parent"
        android:layout_height="220dp"

        android:layout_gravity="center"
        android:clipChildren="false"
      >
        <ImageView
            android:id="@+id/welcome_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/logo2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
          />

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
       >


        <TextView
            android:id="@+id/heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/info_2text1"
            android:textSize="50sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/heading2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/info_2text2"
            android:textSize="28sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/content"
            android:text="@string/info_2text3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/white"

            android:layout_below="@+id/heading2"
            android:gravity="top|center_horizontal"

            android:textAppearance="@style/WelcomeContentAppearance" />

    </RelativeLayout>


</LinearLayout>